<odoo>
    <template id="appointment_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="text-center">
                        <h2>Appointment Details</h2>
                    </div>
                    <table>
                        <tr>
                            <td>Patient</td>
                            <td>:</td>
                            <td>
                                <t t-if="form_data.get('patient_id')">
                                    <t t-esc="form_data['patient_id'][1]"/>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>Date From</td>
                            <td>:</td>
                            <td>
                                <t t-if="form_data.get('date_from')">
                                    <t t-esc="form_data['date_from']"/>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>Date To</td>
                            <td>:</td>
                            <td>
                                <t t-if="form_data.get('date_to')">
                                    <t t-esc="form_data['date_to']"/>
                                </t>
                            </td>
                        </tr>
                    </table>
                    <table class="table table-bordered mt-5">
                        <thead>
                            <tr>
                                <th>Reference</th>
                                <th>Gender</th>
                                <th>State</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="appointments" t-as="line">
                                <tr>
                                    <td>
                                        <t t-esc="line['ref']"/>
                                    </td>
                                    <td>
                                        <t t-esc="line['gender']"/>
                                    </td>
                                    <td>
                                        <t t-esc="line['state']"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>

                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>