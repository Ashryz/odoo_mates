<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="web.ListView.Buttons" t-inherit-mode="extension">
        <xpath expr="//t[@t-if='nbSelected']" position="inside">
            <button type="button" class="btn btn-primary" id="patient_add_appointment"
                    t-if="model.root.resModel == 'hospital.patient'"
                    t-on-click="omButtonClickEvent">
                <span>Add Patient Appointment </span>
            </button>
        </xpath>
    </t>
</templates>